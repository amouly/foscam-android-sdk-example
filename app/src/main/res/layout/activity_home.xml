<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_home_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ebebeb"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:id="@+id/btn_Record"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/ic_stop_selector" />

        <ImageView
            android:id="@+id/btn_snap"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/ic_image_24dp" />

        <ImageView
            android:id="@+id/btn_audio"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/ic_volume_off_24dp" />

        <ImageView
            android:id="@+id/btn_talk"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/ic_mic_off_24dp" />

    </LinearLayout>

</RelativeLayout>